{
  "packages": [
    "packages/app",
    "packages/components",
    "packages/utils"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.2.16",
  "command": {
    "version": {
      "allowBranch": [
        "develop",
        "main"
      ],
      "message": "chore(release): publish %s [skip-ci]"
    }
  },
  "changelogPreset": "conventional-commits",
  "ignoreChanges": [
    "example/**",
    "**/*.md",
    "**/__tests__/**"
  ],
  "granularPathspec": false
}